@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] userData = (string[])TempData["UserData"];
}

<!-- Personal Information Section -->
<div class="card Personal-Card">
    <div class="card-body">
        <h5 class="card-title">Firstname: @userData[2]</h5>
        <h5 class="card-title">Lastname: @userData[3]</h5>
        <h5 class="card-text">Email: @userData[0]</h5>
        <h5 class="card-title">Password: @userData[1]</h5>
        <h5 class="card-title">Phone: @userData[4] </h5> <!-- Here, phone will be shown -->
        <!-- Edit Profile Button -->
        <button class="btn btn-primary btn-block" data-bs-toggle="modal" data-bs-target="#EditProfile">Edit Profile</button>
    </div>
</div>

<!-- Modal for Editing Profile -->
<div class="modal fade" id="EditProfile" tabindex="-1" aria-labelledby="EditProfileLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditProfileLabel">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for Editing -->
                <form method="post" action="@Url.Action("HandleEditProfile", "User")">
                    <div class="mb-3">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="FirstName" name="firstName" value="@userData[2]" />
                    </div>
                    <div class="mb-3">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="LastName" name="lastName" value="@userData[3]" />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="email" value="@userData[0]" />
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="Password" name="password" value="@userData[1]" />
                    </div>
                    <div class="mb-3">
                        <label for="Phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" id="Phone" name="phone" value="" /> <!-- Phone field -->
                    </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
